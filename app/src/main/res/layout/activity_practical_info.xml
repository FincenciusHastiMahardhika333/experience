                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/label_tec_website"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/theme_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_bus_info_2"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/default_8dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/default_16dp"
                    android:paddingRight="@dimen/default_16dp"
                    android:paddingTop="@dimen/default_16dp"
                    android:text="@string/label_where_to_sleep"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#414141" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/default_16dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="@dimen/default_16dp"
                    android:paddingRight="@dimen/default_16dp"
                    android:text="@string/sleep_info"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#414141" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D8EBF8"
                    android:fontFamily="sans-serif"
                    android:padding="@dimen/default_16dp"
                    android:text="@string/hotel_note"
                    android:textColor="#77000000"
                    android:textStyle="bold" />

                <!--Hotels-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/hotel_ibis"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/theme_secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/hotel_ibis_address"
