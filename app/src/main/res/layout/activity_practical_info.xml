                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:background="@drawable/circle_mask_primary"
                            android:padding="@dimen/default_8dp"
                            android:src="@drawable/ic_flight_takeoff"
                            android:tint="@color/android_pure_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/label_by_plane"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/theme_secondary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:layout_marginTop="@dimen/default_16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_arrival_in_zaven"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#414141"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_plane_info"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:layout_marginTop="@dimen/default_16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_arrival_in_south"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#414141"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_plane_info_south"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                </LinearLayout>
                <!--By Bus-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
