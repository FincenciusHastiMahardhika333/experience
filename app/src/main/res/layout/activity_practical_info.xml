                        android:layout_marginTop="@dimen/default_16dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/label_booking"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnHotelOneCall"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:tag="+3210483873"
                            android:text="@string/label_call"
                            android:textColor="@color/theme_secondary"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnHotelOneEmail"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:tag="H2200-SB1@accor.com"
                            android:text="@string/label_email"
                            android:textColor="@color/theme_secondary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/default_8dp"
                    android:layout_marginTop="@dimen/default_8dp"
                    android:background="#ccc" />
                <!--Second hotel : Leonardo Hotel - Wavre-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/hotel_leonardo"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/theme_secondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/hotel_leonardo_address"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
