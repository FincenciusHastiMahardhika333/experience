<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_practical_info" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/default_16dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="@dimen/default_16dp"
                    android:paddingRight="@dimen/default_16dp"
                    android:text="@string/label_getting_there"
                    android:textColor="@color/android_pure_white"
                    android:textSize="25sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/default_8dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/default_16dp"
                    android:paddingRight="@dimen/default_16dp"
                    android:paddingTop="@dimen/default_16dp"
                    android:text="@string/label_how_to_get_there"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#414141" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="@dimen/default_16dp"
                    android:paddingRight="@dimen/default_16dp"
                    android:text="@string/get_there_address"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#414141" />

                <!--By Car-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:background="@drawable/circle_mask_primary"
                            android:padding="@dimen/default_8dp"
                            android:src="@drawable/ic_directions_car"
                            android:tint="@color/android_pure_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/label_by_car"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/theme_secondary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_car_detail_msg"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:id="@+id/btnViewAccessMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_car_access_map"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/theme_secondary"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:layout_marginTop="@dimen/default_16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_where_to_park"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#414141"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/parking_info"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:id="@+id/btnParkingInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/more_information"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/theme_secondary"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--By Train-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:background="@drawable/circle_mask_primary"
                            android:padding="@dimen/default_8dp"
                            android:src="@drawable/ic_directions_transit"
                            android:tint="@color/android_pure_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/label_by_train"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/theme_secondary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_train_msg_1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/by_train_msg_2"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
