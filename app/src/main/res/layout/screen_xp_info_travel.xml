                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/louvain" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ebebeb"
                    android:orientation="vertical"
                    android:padding="@dimen/default_16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/lauvain_name"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#cc000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/lauvain_desc"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#cc000000" />

                    <TextView
                        android:id="@+id/btnAccessMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/label_access_map"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/contactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/default_48dp"
                    android:tag="events@odoo.com"
                    android:text="@string/for_more_info"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>